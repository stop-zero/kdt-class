<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>실습 | 로그인</title>
    <!-- bootstrap cdn -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <!-- axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
      body {
        display: flex;
        justify-content: center;
      }
      .login-box {
      
        width: 20rem;
        height: 20rem;
        text-align: center;
        margin: 15%;
        box-shadow:0 5px 10px rgba(0, 0, 0, 0.8);
        border-radius: 6%;
      }
    </style>
  </head>

  <body>
    <!--  -->
    <div class="login-box">
      <h1>로그인</h1>
      <p style="color: gray">참고! 정답 아이디는 banana 이고<br>
        비밀번호는 1234 입니다.</p>


        <!--  -->
      <form name="result">
        <div class="input-group mb-3">
          <span class="UserId input-group-text" id="id">ID</span>
          <input type="text" name="UserId" class="form-control" aria-label="id input" aria-describedby="id" name="id">
        </div>
        <div class="input-group mb-3">
          <span class="UserPw input-group-text" id="pw">PW</span>
          <input type="password" name="UserPw" class="form-control" aria-label="pw input" aria-describedby="pw" name="pw">
        </div>
        <button type="button" class="btn btn-outline-dark" onclick="UserData();" >Login</button>
        <br /><br/>
        <a href="/">HOME 이동하기 </a>
      </form>
    </div>
    <script>
      const form = document.forms["result"];
      const UserData = () => {
        axios({
          method: "POST",
          url: "/UserData",
          data: {
            UserId: form.UserId.value,
            UserPw: form.UserPw.value,
          },
        }).then((res) => {
          if (res.data == false) {
            alert("로그인 실패 😭");
            window.location.href = "/";
          } else {
            alert("로그인 성공 🥳");
           
            window.location.href = "/";
          
          }
        });
      };
    </script>
  </body>
</html>
